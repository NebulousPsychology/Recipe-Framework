# https://editorconfig.org

root = true

[*]
indent_style = space
charset = utf-8
tab_width = 4
indent_size = 4
end_of_line = unset
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

[*.{ps1,psm1,psd1}]
indent_style = space

[*.tsv]
indent_style = tab
